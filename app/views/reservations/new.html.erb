<body style="background-image: url(http://cpml.com.au/wp-content/uploads/2016/04/CPML-background21.jpg);">
	<div class="container-fluid mb-5">
		<div class="container" style="margin-top: 2%;">
			<div class="row" >
				<div class="col-sm-6" style="margin: auto; background-color : #FFFFFF99; padding: 4%" >

					<h3><strong>New Reservation with :  <%= @therapist.user.name %> </strong></h3>
					
					<%= form_with scope: :reservation, url: therapist_reservations_path(@therapist) do |form| %>

					

						<div class="mt-3">
						   <h5> <%= form.label :category %>:</h5>
						   
						   <%= form.radio_button :category, "3 days session", style: "margin-left: 0.7vw;" %> 
						   3 days session

						   <%= form.radio_button :category, "7 days session", style: "margin-left: 0.7vw;" %>
						   7 days session
						   <%= form.radio_button :category, "14 days session", style: "margin-left: 0.7vw;" %>
						   14 days session
						</div>

						

						<div class="mt-3">
							<h5><%= form.label :due_date %>:</h5>
							<%= form.date_field :start_date, :required => true %>
							<span class="">Your expected Due Date</span>
						</div>

						

						<div class="mt-3">
							<h5><%= form.label :notes %>:</h5>
							<%= form.text_field :special_request%>
						</div>

					


						<div class="pt-2 mt-4">
							<%= form.submit :class => "btn btn-info"%>
						</div>
					<% end %>	
					
				</div>
			</div>
		</div>
	</div>
</body>
	




