<%= form_with scope: :review, url: reservation_reviews_path(@reservation), local: true do |form| %>
	
	<% if !(Review.find_by(reviewed_by: current_user.id, reservation_id: @reservation.id, star: (1..5))) %>
		<div class="stars">
		 <h4> <%= form.label :star %>:</h4>
						   
			<%= form.radio_button :star, "5", style: "margin-left: 0.7vw;" %>5 stars
			<%= form.radio_button :star, "4", style: "margin-left: 0.7vw;" %>4 stars
			<%= form.radio_button :star, "3", style: "margin-left: 0.7vw;" %>3 stars
			<%= form.radio_button :star, "2", style: "margin-left: 0.7vw;" %>2 stars
			<%= form.radio_button :star, "1", style: "margin-left: 0.7vw;" %>1 stars

		</div>
	<% end %>

	<div>
		<h4><%= form.label :comment %>:</h4>
		<%= form.text_area :comment %>
	</div>

	<div class="mt-3">
		<%= form.submit 'Submit review', :class => "btn btn-info btn-sm" %>
	</div>

<% end %>
		

		